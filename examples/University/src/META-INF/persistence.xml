<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
       xmlns="http://java.sun.com/xml/ns/persistence"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
       http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

  <persistence-unit name="university" transaction-type="JTA">
    <jta-data-source>universityDataSource</jta-data-source>
    <class>edu.neumont.csc280.univ.model.Book</class>
    <class>edu.neumont.csc280.univ.model.Course</class>
    <class>edu.neumont.csc280.univ.model.Student</class>
    <class>edu.neumont.csc280.univ.model.Account</class>
    <class>edu.neumont.csc280.univ.model.AccountRole</class>
        
    <properties>
      <property name="openjpa.jdbc.SynchronizeMappings" value="buildSchema(ForeignKeys=true)"/>
      <property name="openjpa.Log" value="SQL=TRACE"/>
    </properties>
  </persistence-unit>
</persistence>